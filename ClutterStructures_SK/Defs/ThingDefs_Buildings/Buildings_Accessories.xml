	<!-- Pallets -->
		<ThingDef ParentName="BuildingBase" Class="SK.ESdef">
		<defName>Storage_WoodenPalletSmall</defName>
		<label>pallet</label>
		<thingClass>SK.Building_ExtendedStorage</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/WoodenPalletSmall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,1)</drawSize>
		</graphicData>
		<maxStorage>1000</maxStorage>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>20</pathCost>
		<castEdgeShadows>true</castEdgeShadows>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<WorkToBuild>700</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>4</Beauty>
			<Bulk>24</Bulk>
			<Mass>9</Mass>
		</statBases>
		<description>The pallet will allow various bulk resources, such as metal and wood, to be stacked much denser than the ground would otherwise allow.</description>
		<size>(2,1)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<costList>
			<Component>3</Component>
		</costList>
		<filthLeaving>BuildingRubble</filthLeaving>
		<building>
			<preventDeterioration>false</preventDeterioration>
			<fixedStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Manufactured</li>
						<li>ResourcesRaw</li>
						<li>SeedsCategory</li>
						<li>FoodRaw</li>
						<li>CookingSupplies</li>
						<li>LuxuryStuffs</li>
						<li>SweetMeals</li>
						<li>Alcohol</li>
						<li>Energetics</li>
						<li>Drugs</li>
						<li>Animalfood</li>							
						<li>Chunks</li>
						<li>StoneBlocks</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Apparel</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<tickerType>Normal</tickerType>
		<staticSunShadowHeight>0.025</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<designationCategory>Accessories</designationCategory>
		<researchPrerequisites>
			<li>SK_StorageI</li>
		</researchPrerequisites>
	</ThingDef>
	<ThingDef ParentName="BuildingBase" Class="SK.ESdef">
		<defName>Storage_SkipBig</defName>
		<label>skip</label>
		<thingClass>SK.Building_ExtendedStorage</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/SkipSmall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,1)</drawSize>
		</graphicData>
		<maxStorage>1500</maxStorage>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>20</pathCost>
		<castEdgeShadows>true</castEdgeShadows>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<WorkToBuild>1390</WorkToBuild>
			<Flammability>5.0</Flammability>
			<Beauty>5</Beauty>
			<Bulk>28</Bulk>
			<Mass>11</Mass>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>35</costStuffCount>
		<costList>
			<Component>5</Component>
		</costList>
		<description>Skips are heavy-duty, industrial grade storage devices, allowing bulk resources such as metal and wood to be stacked denser, even denser than the pallet.</description>
		<size>(2,1)</size>
		<filthLeaving>BuildingRubble</filthLeaving>
		<building>
			<preventDeterioration>false</preventDeterioration>
			<fixedStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Manufactured</li>
						<li>ResourcesRaw</li>
						<li>SeedsCategory</li>
						<li>FoodRaw</li>
						<li>CookingSupplies</li>
						<li>LuxuryStuffs</li>
						<li>SweetMeals</li>
						<li>Alcohol</li>
						<li>Energetics</li>
						<li>Drugs</li>
						<li>Animalfood</li>						
						<li>Chunks</li>
						<li>StoneBlocks</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Apparel</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<tickerType>Normal</tickerType>
		<designationCategory>Accessories</designationCategory>
		<staticSunShadowHeight>0.025</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>SK_StorageII</li>
		</researchPrerequisites>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>
	<!-- Chests -->
	<ThingDef ParentName="ContainerBase">
		<defName>Chest</defName>
		<label>Chest</label>
		<Description>A chest made of metal. Used to store various things inside. Up to 5 items. </Description>
		<graphicData>
			<texPath>Things/Building/Furniture/Containers/Chest/Chest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.9,0.9)</drawSize>
		</graphicData>
		<pathCost>40</pathCost>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1600</WorkToBuild>
			<Beauty>3</Beauty>
			<Bulk>38</Bulk>
			<Mass>15</Mass>
		</statBases>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
			<li>Precious</li>
		</stuffCategories>
		<costList>
			<Component>3</Component>
		</costList>
		<building>
			<preventDeterioration>false</preventDeterioration>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Root</li>
					</categories>
					<exceptedCategories>
						<li>Foods</li>
						<li>Corpses</li>
						<li>Waste</li>
					</exceptedCategories>
				</filter>
			</fixedStorageSettings>
		</building>
		<comps>
			<li Class="SK.CompContainer_Properties">
				<itemsCap>6</itemsCap>
			</li>
		</comps>
		<researchPrerequisites>
			<li>SK_StorageI</li>
		</researchPrerequisites>
	</ThingDef>
